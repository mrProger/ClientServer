<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="WindowOnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <TextBox x:Name="ClientQuery" IsReadOnly="True" TextWrapping="Wrap"/>
        </Grid>
        <Grid Grid.Row="1">
            <Button FontSize="25" Click="OffServerButtonClick">Выключить сервер</Button>
        </Grid>
    </Grid>
</Window>
