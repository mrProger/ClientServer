<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="WindowOnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="55"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <TextBox x:Name="Logs" IsReadOnly="True" TextWrapping="Wrap"/>
        </Grid>
        <Grid Grid.Row="1" Margin="0 5 0 5">
            <TextBox x:Name="QueryBox" FontSize="25"/>
        </Grid>
        <Grid Grid.Row="2">
            <Button HorizontalAlignment="Left" Content="Отключиться от сервера" FontSize="20" Width="259" Click="DisconnectFromServerButtonClick"/>
            <Button HorizontalAlignment="Right" Content="Отправить запрос" FontSize="20" Width="258" Click="SendQueryOnServerButtonClick"/>
        </Grid>
    </Grid>
</Window>
